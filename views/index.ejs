    <script>
        let socket = io();

socket.on("connect",()=>{
    console.log("established a connection");
    socket.on("message",(data)=>{
      if(data.id == `<%=id%>`){
      let element = document.createElement("div");
      element.setAttribute("style","background-color: grey; padding: 10%; margin: 10px;");
      element.innerHTML = data.data;
      let messagebox = document.getElementById("messaegbox");
      messagebox.appendChild(element);
      }
    })
});


socket.on("disconnect",()=>{
    console.log("hi disconnect")
});

    </script>

    
<script>
  function sendmessage(){

    let message = document.getElementById("message").value;
    if(message==''){
alert("please add some message")
    }else{
    socket.emit("message",{
      "data" : message,
      "id" : `<%= id %>`
    })
  }
    document.getElementById("message").value="";
  }
</script>
    
